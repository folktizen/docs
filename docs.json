  "favicon": "/favicon.svg",
  "navigation": {
    "groups": [
      {
        "group": "Introduction",
        "pages": [
          "introduction",
          "introduction/problem",
          "introduction/solution"
        ]
      },
      {
        "group": "Platform Design",
        "pages": [
          "platform/ecosystem-strategy",
          "platform/technical-architecture",
          "platform/user-journey",
          "platform/revenue-model",
          "platform/tokenomics",
          "platform/governance"
        ]
      },
      {
        "group": "Development",
        "pages": [
          "development/roadmap"
        ]
      },
      {
        "group": "Community",
        "pages": [
          "community/community-and-partnerships"
        ]
      },
      {
        "group": "Legal",
        "pages": [
          "legal/legal-and-risk-considerations"
        ]
      },
      {
        "group": "Appendix",
        "pages": [
          "appendix/final-notes"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Waitlist",
          "href": "https://folktizen.xyz",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://discord.com",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo-text-dark.png",
