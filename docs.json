{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Folktizen Docs",
  "colors": {
    "primary": "#E6A800",
    "light": "#E6A800",
    "dark": "#E6A800"
  },
  "styling": {
    "codeblocks": "system"
  },
  "background": {
